<!doctype html>
<html lang="ko">
<head>
    <%- include('./includes/header.ejs') %>
    <title>
        <%- title; %>
    </title>
    <style>
        body {
          max-width: 70%;
          min-width: 50vw;
          }
    </style>
</head>
<body>
<h1 class="title is-1">
    <%- pageName; %>
</h1>
<form action="/uploads" name="uploadForm" method="post" enctype="multipart/form-data">
    <div class="field">
        <label class="label" for="id">아이디</label>
        <div class="control has-icons-left has-icons-right">
            <input class="input is-success" type="text" id="id" placeholder="아이디" name="id">
            <span class="icon is-small is-left">
      <i class="fas fa-user"></i>
    </span>
            <span class="icon is-small is-right">
      <i class="fas fa-check"></i>
    </span>
        </div>
    </div>
    <br>
    <div class="field">
        <label class="label" for="pw">비밀번호</label>
        <div class="control has-icons-left has-icons-right">
            <input class="input is-success" type="password" id="pw" placeholder="비밀번호" name="pw">
            <span class="icon is-small is-left">
      <i class="fas fa-lock"></i>
    </span>
            <span class="icon is-small is-right">
      <i class="fas fa-check"></i>
    </span>
        </div>
    </div>
    <br>
    <div class="field">
        <label class="label" for="name">이름</label>
        <div class="control has-icons-left has-icons-right">
            <input class="input is-success" type="text" id="name" placeholder="이름" value="이현민" name="name">
            <span class="icon is-small is-left">
      <i class="fas fa-user"></i>
    </span>
            <span class="icon is-small is-right">
      <i class="fas fa-check"></i>
    </span>
        </div>
    </div>
    <br>
    <div class="field">
        <label class="label" for="age">나이</label>
        <div class="control has-icons-left has-icons-right">
            <input class="input is-success" type="number" id="age" placeholder="나이" value="01" name="age" maxlength="2">
            <span class="icon is-small is-left">
    </span>
            <span class="icon is-small is-right">
      <i class="fas fa-check"></i>
    </span>
        </div>
    </div>
    <div class="field">
        <div class="file has-name is-primary" id="fileInput">
            <label class="file-label">
                <input class="file-input" type="file" name="userfile">
                <span class="file-cta">
      <span class="file-icon">
        <i class="fas fa-upload"></i>
      </span>
      <span class="file-label">
          파일을 선택하세요...
      </span>
    </span>
                <span class="file-name">
    </span>
            </label>
        </div>
    </div>

    <br>

    <button type="submit" class="button icon-text is-success" id="submitBtn">회원가입
        <span class="icon">
    <i class="fa fa-pencil-square-o"></i>
    </span>
    </button>
    <button type="reset" class="button icon-text is-warning" id="resetBtn">리셋
        <span class="icon">
    <i class="fa fa-pencil-square-o"></i>
    </span>
    </button>
    <div id="result"></div>
</form>
<br>
<br>
<br>

<%- include('includes/footer.ejs') %>
<script>
  const fileInput = document.querySelector('#fileInput input[type=file]');
  fileInput.onchange = () => {
    if (fileInput.files.length > 0) {
      const fileName = document.querySelector('#fileInput .file-name');
      fileName.textContent = fileInput.files[0].name;
    }
  }
</script>
</body>
</html>
